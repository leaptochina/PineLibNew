<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="@dimen/w90b"
        android:layout_height="@dimen/h80b"
        android:background="@drawable/top_circle_white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h8b"
            android:id="@+id/relativeLayout">


            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:textSize="@dimen/f40k"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/done"
                android:layout_width="wrap_content"
                android:textSize="@dimen/f40k"
                android:layout_height="wrap_content"
                android:text="@string/done"
                android:layout_margin="@dimen/w3b"
                android:layout_alignBaseline="@+id/title"
                android:textColor="#FF5843"
                android:layout_alignBottom="@+id/title"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


            <TextView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:textSize="@dimen/f40k"
                android:layout_height="wrap_content"
                android:text="@string/done"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


        </RelativeLayout>

        <ListView
            android:id="@+id/lists"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relativeLayout" />
    </RelativeLayout>

</RelativeLayout>