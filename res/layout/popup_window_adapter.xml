<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h8b">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/w4b"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="@dimen/f30k" />

        <ImageView
            android:id="@+id/checkbox"
            android:layout_width="@dimen/h3b"
            android:layout_height="@dimen/h3b"
            android:src="@drawable/icon_selected"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/w4b"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</RelativeLayout>